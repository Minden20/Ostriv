<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
  fx:controller="org.example.ostriv.ostriv.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label fx:id="welcomeText" text="Натисніть кнопку, щоб завантажити карту"/>
  <Button fx:id="loadButton" text="Завантажити карту" onAction="#onLoadMapClick"/>
  <ScrollPane fx:id="mapContainer" fitToWidth="true" fitToHeight="true"
    VBox.vgrow="ALWAYS" prefHeight="600.0"/>
</VBox>
